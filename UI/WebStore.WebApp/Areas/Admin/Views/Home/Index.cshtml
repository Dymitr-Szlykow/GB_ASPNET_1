@using GB.ASPNET.WebStore.Services.Interfaces @* из-за глюков IntelliSense *@
@inject IVeiwAdminIndexData divSquaresData
@{
    ViewBag.Title = "Контрольная панель";
}
<div class="row">
    <div class="col-lg-12">
        <h2>ADMIN DASHBOARD</h2>
    </div>
</div><!-- /. ROW  -->

<hr />

<div class="row">
    <div class="col-lg-12 ">
        <div class="alert alert-info">
            <strong>Welcome Jhon Doe ! </strong> You Have No pending Task For Today.
        </div>
    </div>
</div><!-- /. ROW  -->

@{
    int i;
    for (i = 0; i < divSquaresData.Items.Length; i++) {

        if (i % 6 == 0) { @Html.Raw("<div class=\"row text-center pad-top\">"); }

        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-6">
            <div class="div-square">
                <a href="@divSquaresData.Items[i].href" >
                    <i class="@divSquaresData.Items[i].FAStyles"></i>
                    <h4>@divSquaresData.Items[i].heading</h4>
                </a>
            </div>
        </div>

        if (i % 6 == 5) { @Html.Raw("</div><!-- /. ROW  -->"); }
    }
    if (i % 6 != 0) { @Html.Raw("</div><!-- /. ROW  -->"); }
    // а вообще, плохой дизайн, следует использовать grid-container
}

<div class="row">
    <div class="col-lg-12 ">
		<br/>
        <div class="alert alert-danger">
            <strong>Want More Icons Free ? </strong> Checkout fontawesome website and use any icon <a target="_blank" href="http://fortawesome.github.io/Font-Awesome/icons/">Click Here</a>.
        </div>       
    </div>
</div><!-- /. ROW  -->