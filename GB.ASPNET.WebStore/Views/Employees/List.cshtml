@model IEnumerable<GB.ASPNET.WebStore.Models.Employee>
@{
    ViewData["Title"] = "Список сотрудников";
}
<div class="container">
    <h3>Список сотрудников</h3>

    <table class="table">
        <thead>
            <tr>
                @*<td>id</td>*@
                <td>Фамилия</td>
                <td>Имя</td>
                <td>Отчество</td>
                <td>Возраст</td>
                <td>Ф.И.О.</td>
            </tr>
        </thead>
        <tbody>
            @foreach(var emp in Model)
            {
                <tr>
                    @*<td>@emp.Id.ToString()</td>*@
                    <td>@emp.NameLast</td>
                    <td>@emp.NameFirst</td>
                    <td>@emp.NamePaternal</td>
                    <td>@emp.Age.ToString() @GB.ASPNET.WebStore.Models.General.AgeUnit(emp.Age)</td>
                    <td>@emp.NameShort</td>
                    <td><a asp-controller="Employees" asp-action="Details" asp-route-id="@emp.Id">подробно</a></td>
                </tr>
            }
        </tbody>
    </table>

    <p><a asp-controller="Home" asp-action="Index">На главную</a></p>
</div>